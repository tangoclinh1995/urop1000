<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pebble Connection Status"
        android:id="@+id/txtPebbleStatus"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtSerial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Start"
        android:textSize="16dp"
        android:id="@+id/btnServer"
        android:layout_below="@+id/txtPort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Serial"
        android:id="@+id/txtSerial"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PC Disconnected"
        android:id="@+id/txtPCStatus"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtPebbleStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port"
        android:id="@+id/txtPort"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/editPort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editPort"
        android:layout_below="@+id/txtPCStatus"
        android:layout_toRightOf="@+id/txtPort"
        android:textSize="16dp"
        android:layout_alignRight="@+id/txtPCStatus"
        android:layout_alignEnd="@+id/txtPCStatus" />

</RelativeLayout>
